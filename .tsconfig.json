{
    "compilerOptions": {
        "target": "ES2016",
        "module": "CommonJS",
        "allowJs": true, 
        "checkJs": true,
        "declaration": true,                                 
        "declarationMap": true,                    
        "outDir": "dist",                          
        "strict": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules", 
        "**/__tests__/*"
    ]
}
